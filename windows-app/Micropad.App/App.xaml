<Application x:Class="Micropad.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Micropad.App.Converters"
>
    <Application.Resources>
        <ResourceDictionary>
            <!-- Modern Dark Theme (UI/UX Improvements) -->
            <!-- Background -->
            <SolidColorBrush x:Key="BgPrimary" Color="#1E1E1E"/>
            <SolidColorBrush x:Key="BgSecondary" Color="#252526"/>
            <SolidColorBrush x:Key="BgTertiary" Color="#2D2D30"/>
            <SolidColorBrush x:Key="BgInput" Color="#3E3E42"/>

            <!-- Border & Divider -->
            <SolidColorBrush x:Key="Border" Color="#3F3F46"/>
            <SolidColorBrush x:Key="Divider" Color="#2E2E32"/>

            <!-- Text -->
            <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="TextSecondary" Color="#CCCCCC"/>
            <SolidColorBrush x:Key="TextTertiary" Color="#999999"/>
            <SolidColorBrush x:Key="TextDisabled" Color="#6E6E6E"/>

            <!-- Accent (SENetLabs blue #00BFFF as brand accent) -->
            <SolidColorBrush x:Key="BrandBlue" Color="#00BFFF"/>
            <SolidColorBrush x:Key="AccentPrimary" Color="#0078D4"/>
            <SolidColorBrush x:Key="AccentHover" Color="#1E88E5"/>
            <SolidColorBrush x:Key="AccentPressed" Color="#0D5E9E"/>
            <SolidColorBrush x:Key="AccentGlow" Color="#4D0078D4"/>
            <!-- Selected slot glow (Macros grid) -->
            <SolidColorBrush x:Key="SlotSelectedBg" Color="#2A4A5C"/>

            <!-- Status -->
            <SolidColorBrush x:Key="Success" Color="#10B981"/>
            <SolidColorBrush x:Key="Warning" Color="#F59E0B"/>
            <SolidColorBrush x:Key="Error" Color="#EF4444"/>
            <SolidColorBrush x:Key="Info" Color="#3B82F6"/>

            <!-- Legacy keys (same theme, for existing views) -->
            <SolidColorBrush x:Key="BackgroundPrimary" Color="#1E1E1E"/>
            <SolidColorBrush x:Key="BackgroundSecondary" Color="#252526"/>
            <SolidColorBrush x:Key="BackgroundTertiary" Color="#2D2D30"/>
            <SolidColorBrush x:Key="BorderColor" Color="#3F3F46"/>
            <SolidColorBrush x:Key="AccentBlue" Color="#0078D4"/>

            <!-- Typography -->
            <FontFamily x:Key="MainFont">Segoe UI Variable Display, Segoe UI</FontFamily>
            <FontFamily x:Key="MonoFont">Cascadia Code, Consolas</FontFamily>

            <!-- Converters -->
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <converters:SlotSelectedToBrushConverter x:Key="SlotSelectedToBrushConverter"/>

            <!-- Default Button style: visible press feedback (flash) on click -->
            <Style TargetType="Button">
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Padding="{TemplateBinding Padding}"
                                    CornerRadius="4">
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                  Content="{TemplateBinding Content}"
                                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                                  TextBlock.Foreground="{TemplateBinding Foreground}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Bd" Property="Opacity" Value="0.92"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="Bd" Property="Opacity" Value="0.75"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
