<Application x:Class="Micropad.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Dark Theme Colors -->
            <SolidColorBrush x:Key="BackgroundPrimary" Color="#2B2F33"/>
            <SolidColorBrush x:Key="BackgroundSecondary" Color="#353A40"/>
            <SolidColorBrush x:Key="BorderColor" Color="#4A5157"/>
            <SolidColorBrush x:Key="TextPrimary" Color="#E8E8E8"/>
            <SolidColorBrush x:Key="TextSecondary" Color="#B0B0B0"/>
            <SolidColorBrush x:Key="AccentBlue" Color="#0078D4"/>
            <SolidColorBrush x:Key="BackgroundTertiary" Color="#3E4349"/>
            <SolidColorBrush x:Key="AccentHover" Color="#1084D8"/>
            <SolidColorBrush x:Key="Success" Color="#28A745"/>
            <SolidColorBrush x:Key="Error" Color="#DC3545"/>
            
            <!-- Converters -->
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
